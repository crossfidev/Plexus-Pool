(library
 (name mineplex_shell_services)
 (public_name mineplex-shell-services)
 (libraries mineplex-base
	    mineplex-p2p-services
	    mineplex-version)
 (flags (:standard -linkall
       -open mineplex_base__TzPervasives
       -open mineplex_base
		   -open mineplex_p2p_services
		   -open mineplex_version)))

(alias
 (name runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:mineplex-tooling:lint.sh} %{deps})))
