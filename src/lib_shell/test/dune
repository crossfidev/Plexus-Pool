(executables
 (names test
        test_locator)
 (libraries mineplex-base
            mineplex-storage
            mineplex-shell-context
            mineplex-p2p
            mineplex-p2p-services
            mineplex-protocol-updater
            mineplex-shell
            mineplex-shell-services
            mineplex-embedded-protocol-demo-noops
            mineplex-stdlib-unix
            mineplex-validation
            mineplex-test-services
            alcotest-lwt)
 (flags (:standard -open mineplex_base__TzPervasives
                   -open mineplex_storage
                   -open mineplex_shell_context
                   -open mineplex_protocol_updater
                   -open mineplex_p2p
                   -open mineplex_p2p_services
                   -open mineplex_test_services
                   -open mineplex_shell
                   -open mineplex_shell_services
                   -open mineplex_stdlib_unix
                   -open mineplex_validation)))

(alias
 (name buildtest)
 (deps test.exe
       test_locator.exe))

(alias
 (name runtest_shell)
 (action (run %{exe:test.exe})))

(alias
 (name runtest_locator)
 (action (run %{exe:test_locator.exe} --no-bench)))

(alias
 (name runbench_locator)
 (action (run %{exe:test_locator.exe})))

(alias
 (name runtest)
 (package mineplex-shell)
 (deps (alias runtest_shell)
       (alias runtest_locator)))

(alias
 (name runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:mineplex-tooling:lint.sh} %{deps})))
