(executables
 (names bench_simple bench_tool)
 (libraries mineplex-base
            mineplex-shell
            mineplex-alpha-test-helpers)
 (flags (:standard -open mineplex_base__TzPervasives
                   -open mineplex_shell
                   -open mineplex_protocol_alpha
                   -open mineplex_protocol_alpha_parameters
                   -open mineplex_alpha_test_helpers)))

(alias
 (name buildtest)
 (deps bench_tool.exe bench_simple.exe))

(alias
 (name runbench_alpha_simple)
 (deps bench_simple.exe)
 (action (chdir %{workspace_root} (run %{exe:bench_simple.exe}))))

(alias
 (name runbench_alpha)
 (deps bench_tool.exe)
 (action (chdir %{workspace_root} (run %{exe:bench_tool.exe}))))

(alias
 (name runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:mineplex-tooling:lint.sh} %{deps})))
