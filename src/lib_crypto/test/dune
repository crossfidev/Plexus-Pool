(executables
 (names test_hacl
        test_merkle
        test_base58
        test_ed25519
        test_blake2b
        test_pvss
        test_crypto_box
        test_deterministic_nonce)
 (libraries mineplex-stdlib
            mineplex-crypto
            data-encoding
            alcotest)
 (flags (:standard -open mineplex_stdlib
                   -open mineplex_crypto
                   -open Data_encoding)))

(alias
 (name buildtest)
 (deps test_hacl.exe
       test_merkle.exe
       test_base58.exe
       test_ed25519.exe
       test_blake2b.exe
       test_pvss.exe
       test_crypto_box.exe
       test_deterministic_nonce.exe))

(alias
 (name runtest_hacl)
 (action (run %{exe:test_hacl.exe})))

(alias
 (name runtest_merkle)
 (action (run %{exe:test_merkle.exe})))

(alias
 (name runtest_base58)
 (action (run %{exe:test_base58.exe})))

(alias
 (name runtest_ed25519)
 (action (run %{exe:test_ed25519.exe})))

(alias
 (name runtest_blake2b)
 (action (run %{exe:test_blake2b.exe})))

(alias
 (name runtest_pvss)
 (action (run %{exe:test_pvss.exe})))

(alias
 (name runtest_crypto_box)
 (action (run %{exe:test_crypto_box.exe})))

(alias
 (name runtest_deterministic_nonce)
 (action (run %{exe:test_deterministic_nonce.exe})))

(alias
 (name runtest)
 (package mineplex-crypto)
 (deps (alias runtest_hacl)
       (alias runtest_merkle)
       (alias runtest_base58)
       (alias runtest_ed25519)
       (alias runtest_blake2b)
       (alias runtest_pvss)
       (alias runtest_crypto_box)
       (alias runtest_deterministic_nonce)))

(alias
 (name runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:mineplex-tooling:lint.sh} %{deps})))
