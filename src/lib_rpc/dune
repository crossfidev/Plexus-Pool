(library
 (name mineplex_rpc)
 (public_name mineplex-rpc)
 (libraries data-encoding
            mineplex-error-monad
            resto
            resto-directory)
 (flags (:standard -open Data_encoding
                   -open mineplex_error_monad)))

(alias
 (name runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:mineplex-tooling:lint.sh} %{deps})))
