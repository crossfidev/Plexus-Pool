(executable
 (name main)
 (libraries mineplex-base
            mineplex-micheline
            mineplex-protocol-environment
            alcotest-lwt
            mineplex-alpha-test-helpers
            mineplex-stdlib-unix
            mineplex-client-base
            mineplex-protocol-alpha-parameters
            mineplex-test-services)
 (flags (:standard -open mineplex_base__TzPervasives
                   -open mineplex_micheline
                   -open mineplex_client_alpha
                   -open mineplex_protocol_alpha
                   -open mineplex_protocol_environment_alpha
                   -open mineplex_alpha_test_helpers
                   -open mineplex_test_services)))

(alias
 (name buildtest)
 (package mineplex-protocol-alpha-tests)
 (deps main.exe))

(rule
 (copy %{lib:mineplex-protocol-alpha-parameters:test-parameters.json}
       protocol_parameters.json))

; runs only the `Quick tests
(alias
 (name runtest_proto_alpha)
 (package mineplex-protocol-alpha-tests)
 (action (run %{exe:main.exe} -v -q)))

; runs both `Quick and `Slow tests
(alias
 (name runtest_slow)
 (package mineplex-protocol-alpha-tests)
 (action (run %{exe:main.exe} -v)))

(alias
 (name runtest)
 (package mineplex-protocol-alpha-tests)
 (deps (alias runtest_proto_alpha)))

(alias
 (name runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:mineplex-tooling:lint.sh} %{deps})))
