opam-version: "2.0"
maintainer: "contact@mineplex.com"
authors: [ "mineplex devteam" ]
homepage: "https://www.mineplex.com/"
bug-reports: "https://gitlab.com/mineplex/mineplex/issues"
dev-repo: "git+https://gitlab.com/mineplex/mineplex.git"
license: "MIT"
depends: [
  "mineplex-tooling" { with-test }
  "dune" { >= "1.11" }
  "mineplex-base"
  "mineplex-protocol-compiler"
  "alcotest-lwt" { with-test & >= "1.1.0" }
  "mineplex-alpha-test-helpers" { with-test }
  "mineplex-stdlib-unix" { with-test }
  "mineplex-protocol-environment" { with-test }
  "mineplex-test-services" { with-test }
  "mineplex-client-base" { with-test }
  "mineplex-protocol-alpha-parameters" { with-test }
  "mineplex-shell-services" { with-test }
]
build: [
  [
    "%{mineplex-protocol-compiler:lib}%/replace"
    "%{mineplex-protocol-compiler:lib}%/dune_protocol.template"
    "dune"
    "%{mineplex-protocol-compiler:lib}%/final_protocol_versions"
    "alpha"
  ]
  ["dune" "build" "-p" name "-j" jobs]
  ["dune" "runtest" "-p" name "-j" jobs] {with-test}
]
synopsis: "mineplex/Protocol: tests for economic-protocol definition"
