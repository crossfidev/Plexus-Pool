(executables
 (names test_michelson_v1_macros)
 (libraries mineplex-base
            mineplex-micheline
            mineplex-protocol-alpha
            mineplex-client-alpha
            alcotest-lwt)
 (flags (:standard -open mineplex_base__TzPervasives
                   -open mineplex_micheline
                   -open mineplex_client_alpha
                   -open mineplex_protocol_alpha)))


(alias
(name buildtest)
(deps test_michelson_v1_macros.exe))

(alias
(name runtest_michelson_v1_macros)
(action (run %{exe:test_michelson_v1_macros.exe})))

(alias
(name runtest)
(package mineplex-client-alpha)
(deps (alias runtest_michelson_v1_macros)))

(alias
 (name runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:mineplex-tooling:lint.sh} %{deps})))
