(library
 (name mineplex_protocol_alpha_parameters)
 (public_name mineplex-protocol-alpha-parameters)
 (modules :standard \ gen)
 (libraries mineplex-base
            mineplex-protocol-environment
            mineplex-protocol-alpha)
 (flags (:standard -open mineplex_base__TzPervasives
                   -open mineplex_protocol_alpha
                   -linkall))
)

(executable
 (name gen)
 (libraries mineplex-base
            mineplex-protocol-alpha-parameters)
 (modules gen)
 (flags (:standard -open mineplex_base__TzPervasives
                   -open mineplex_protocol_alpha_parameters
                   -linkall)))

(rule
 (targets sandbox-parameters.json)
 (deps gen.exe)
 (action (run %{deps} --sandbox)))

(rule
 (targets test-parameters.json)
 (deps gen.exe)
 (action (run %{deps} --test)))

(rule
 (targets mainnet-parameters.json)
 (deps gen.exe)
 (action (run %{deps} --mainnet)))

(install
 (section lib)
 (files sandbox-parameters.json test-parameters.json mainnet-parameters.json))

(alias
 (name runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:mineplex-tooling:lint.sh} %{deps})))
