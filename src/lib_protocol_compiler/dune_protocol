;; -*- mode: dune; -*-

(include dune.inc)

(rule
 (targets "dune.inc.gen")
 (deps mineplexlex_PROTOCOL (glob_files *.ml) (glob_files *.mli))
 (action
  (run
    %{libexec:mineplexlex-protocol-compiler:replace}
    %{libexec:mineplexlex-protocol-compiler:dune_protocol.template}
    "dune.inc.gen"
    %{libexec:mineplexlex-protocol-compiler:final_protocol_versions})))

(alias
 (name   runtest_dune_template)
 (action (diff dune.inc dune.inc.gen)))
