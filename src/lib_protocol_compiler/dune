(rule
 (targets embedded_cmis.ml)
 (action
  (run %{bin:ocp-ocamlres} -format ocaml -o %{targets}
       %{lib:stdlib:camlinternalFormatBasics.cmi}
       %{dep:.mineplex_protocol_registerer.objs/byte/mineplex_protocol_registerer__Registerer.cmi}
       %{lib:mineplex-protocol-environment-sigs:mineplex_protocol_environment_sigs.cmi}
       %{lib:mineplex-protocol-environment-sigs:mineplex_protocol_environment_sigs__V0.cmi})))

(library
 (name mineplex_protocol_registerer)
 (public_name mineplex-protocol-compiler.registerer)
 (libraries mineplex-base
            mineplex-protocol-environment-sigs)
 (flags (:standard -opaque
                   -open mineplex_base__TzPervasives))
 (modules Registerer))

(library
 (name mineplex_protocol_compiler)
 (public_name mineplex-protocol-compiler)
 (libraries mineplex-base
            mineplex-base.unix
            mineplex-protocol-environment-sigs
            mineplex-stdlib-unix
            compiler-libs.common
            lwt.unix
            ocplib-ocamlres
            unix)
 (flags (:standard -open mineplex_base__TzPervasives
                   -open mineplex_base_unix
                   -open mineplex_stdlib_unix))
 (modules Embedded_cmis Packer Compiler))

(library
