(executable
 (name main)
 (libraries mineplex-base
            mineplex-micheline
            mineplex-protocol-environment
            alcotest-lwt
            mineplex-001-Pt8PXNHh-test-helpers
            mineplex-stdlib-unix
            mineplex-client-base
            mineplex-protocol-001-Pt8PXNHh-parameters
            mineplex-test-services)
 (flags (:standard -open mineplex_base__TzPervasives
                   -open mineplex_micheline
                   -open mineplex_client_001_Pt8PXNHh
                   -open mineplex_protocol_001_Pt8PXNHh
                   -open mineplex_protocol_environment_001_Pt8PXNHh
                   -open mineplex_001_Pt8PXNHh_test_helpers
                   -open mineplex_test_services)))

(alias
 (name buildtest)
 (package mineplex-protocol-001-Pt8PXNHh-tests)
 (deps main.exe))

(rule
 (copy %{lib:mineplex-protocol-001-Pt8PXNHh-parameters:test-parameters.json}
       protocol_parameters.json))

; runs only the `Quick tests
(alias
 (name runtest_proto_001_Pt8PXNHh)
 (package mineplex-protocol-001-Pt8PXNHh-tests)
 (action (run %{exe:main.exe} -v -q)))

; runs both `Quick and `Slow tests
(alias
 (name runtest_slow)
 (package mineplex-protocol-001-Pt8PXNHh-tests)
 (action (run %{exe:main.exe} -v)))

(alias
 (name runtest)
 (package mineplex-protocol-001-Pt8PXNHh-tests)
 (deps (alias runtest_proto_001_Pt8PXNHh)))

(alias
 (name runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:mineplex-tooling:lint.sh} %{deps})))
