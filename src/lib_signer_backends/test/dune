(executables
 (names test_encrypted)
 (libraries mineplex-signer-backends
            alcotest-lwt)
 (flags (:standard -open mineplex_error_monad
                   -open mineplex_stdlib
                   -open mineplex_crypto
                   -open mineplex_client_base
                   -open mineplex_signer_backends)))

(alias
 (name buildtest)
 (deps test_encrypted.exe))

(alias
 (name runtest_signer_encrypted)
 (action (run %{exe:test_encrypted.exe})))

(alias
 (name runtest)
 (package mineplex-signer-backends)
 (deps (alias runtest_signer_encrypted)))

(alias
 (name runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:mineplex-tooling:lint.sh} %{deps})))
