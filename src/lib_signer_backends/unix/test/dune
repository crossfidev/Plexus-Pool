(executables
 (names test_crouching)
 (libraries mineplex-signer-backends.unix
            alcotest-lwt)
 (flags (:standard -open mineplex_error_monad
                   -open mineplex_stdlib
                   -open mineplex_crypto
                   -open mineplex_client_base
                   -open mineplex_signer_backends_unix)))

(alias
 (name buildtest)
 (deps test_crouching.exe))

(alias
 (name runtest_crouching)
 (action (run %{exe:test_crouching.exe})))

(alias
 (name runtest)
 (package mineplex-signer-backends)
 (deps (alias runtest_crouching)))

(alias
 (name runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:mineplex-tooling:lint.sh} %{deps})))
