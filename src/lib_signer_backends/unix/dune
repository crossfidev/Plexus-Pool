(library
 (name mineplex_signer_backends_unix)
 (public_name mineplex-signer-backends.unix)
 (modules (:standard \ no_ledger with_ledger))
 (libraries ocplib-endian.bigstring
            mineplex-signer-backends
            mineplex-base
            mineplex-base.unix
            mineplex-stdlib-unix
            mineplex-rpc-http-client-unix
            (select ledger.ml from
              (ledgerwallet-mineplex -> with_ledger.ml)
              (-> no_ledger.ml)))
 (flags (:standard -open mineplex_base__TzPervasives
                   -open mineplex_stdlib_unix
                   -open mineplex_stdlib
                   -open mineplex_client_base
                   -open mineplex_rpc_http
                   -open mineplex_rpc_http_client
                   -open mineplex_rpc_http_client_unix
                   -open mineplex_signer_services
                   -open mineplex_signer_backends
                   -open mineplex_shell_services)))

(alias
 (name runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:mineplex-tooling:lint.sh} %{deps} --ignore ledger.ml)))
