(executables
 (names test_requester)
 (libraries mineplex-base
            mineplex-stdlib-unix
            mineplex-requester
            mineplex-test-services
            alcotest-lwt)
 (flags (:standard -open mineplex_base__TzPervasives
                   -open mineplex_stdlib
                   -open mineplex_requester
                   -open mineplex_test_services)))


(alias
 (name runtest_requester)
 (action (run %{exe:test_requester.exe})))

(alias
 (name runtest)
 (package mineplex-requester)
 (deps (alias runtest_requester)))
