(library
 (name mineplex_protocol_environment_packer)
 (public_name mineplex-protocol-environment-packer)
 (modules))

(executable
 (name s_packer))

(install
  (section libexec)
  (package mineplex-protocol-environment-packer)
  (files (s_packer.exe as s_packer)))

(alias
 (name runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:mineplex-tooling:lint.sh} %{deps})))
