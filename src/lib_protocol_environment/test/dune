(executables
 (names test)
 (libraries mineplex-base
            mineplex-protocol-environment
            alcotest-lwt)
 (flags (:standard -open mineplex_base__TzPervasives
                   -open mineplex_protocol_environment)))

(alias
 (name buildtest)
 (deps test.exe))

(alias
 (name runtest)
 (package mineplex-protocol-environment)
 (action (run %{exe:test.exe})))

(alias
 (name runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:mineplex-tooling:lint.sh} %{deps})))
