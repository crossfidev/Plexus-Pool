(library
 (name mineplex_signer_services)
 (public_name mineplex-signer-services)
 (libraries mineplex-base
            mineplex-client-base
            mineplex-rpc)
 (flags (:standard -open mineplex_base__TzPervasives
                   -open mineplex_rpc
