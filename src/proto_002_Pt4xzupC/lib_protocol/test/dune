(executable
 (name main)
 (libraries tezos-base
            tezos-micheline
            tezos-protocol-environment
            alcotest-lwt
            tezos-002-Pt4xzupC-test-helpers
            tezos-stdlib-unix
            tezos-client-base
            tezos-protocol-002-Pt4xzupC-parameters
            tezos-test-services)
 (flags (:standard -open Tezos_base__TzPervasives
                   -open Tezos_micheline
                   -open Tezos_client_002_Pt4xzupC
                   -open Tezos_protocol_002_Pt4xzupC
                   -open Tezos_protocol_environment_002_Pt4xzupC
                   -open Tezos_002_Pt4xzupC_test_helpers
                   -open Tezos_test_services)))

(alias
 (name buildtest)
 (package tezos-protocol-002-Pt4xzupC-tests)
 (deps main.exe))

(rule
 (copy %{lib:tezos-protocol-002-Pt4xzupC-parameters:test-parameters.json}
       protocol_parameters.json))

; runs only the `Quick tests
(alias
 (name runtest_proto_002_Pt4xzupC)
 (package tezos-protocol-002-Pt4xzupC-tests)
 (action (run %{exe:main.exe} -v -q)))

; runs both `Quick and `Slow tests
(alias
 (name runtest_slow)
 (package tezos-protocol-002-Pt4xzupC-tests)
 (action (run %{exe:main.exe} -v)))

(alias
 (name runtest)
 (package tezos-protocol-002-Pt4xzupC-tests)
 (deps (alias runtest_proto_002_Pt4xzupC)))

(alias
 (name runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:tezos-tooling:lint.sh} %{deps})))
