(library
 (name mineplex_rpc_http)
 (public_name mineplex-rpc-http)
 (modules RPC_client_errors media_type)
 (libraries mineplex-base
            resto-cohttp)
 (flags (:standard -open mineplex_base__TzPervasives)))

(library
 (name mineplex_rpc_http_client)
 (public_name mineplex-rpc-http-client)
 (modules RPC_client)
 (libraries mineplex-base
            resto-cohttp-client
            mineplex-rpc-http)
 (flags (:standard -open mineplex_base__TzPervasives
                   -open mineplex_rpc_http)))

(library
 (name mineplex_rpc_http_client_unix)
 (public_name mineplex-rpc-http-client-unix)
 (modules RPC_client_unix)
 (libraries mineplex-stdlib-unix
            mineplex-base
            cohttp-lwt-unix
            resto-cohttp-client
            mineplex-rpc-http-client)
 (flags (:standard -open mineplex_base__TzPervasives
                   -open mineplex_rpc_http_client)))

(library
 (name mineplex_rpc_http_server)
 (public_name mineplex-rpc-http-server)
 (libraries mineplex-base
            resto-cohttp-server
            mineplex-rpc-http)
 (modules RPC_server)
 (flags (:standard -open mineplex_base__TzPervasives
                   -open mineplex_rpc
                   -open mineplex_rpc_http)))

(alias
 (name runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:mineplex-tooling:lint.sh} %{deps})))
