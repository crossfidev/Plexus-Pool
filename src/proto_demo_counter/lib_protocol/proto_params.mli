(** Constants of the demo protocol, passed at protocol activation.
    They defines the initial values of  a and b *)
type t = {init_a : Int32.t; init_b : Int32.t}

val default : t

(** Create a [t] from a json structure of the form
    [{ 'init_a': int32, 'init_b': int32 }]. Fields are optional with default
    value 0. *)
val from_json : Data_encoding.json -> t
