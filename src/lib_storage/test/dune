(executables
 (names test)
 (libraries mineplex-base
            mineplex-storage
            mineplex-stdlib-unix
            alcotest-lwt)
 (flags (:standard -open mineplex_base__TzPervasives
                   -open mineplex_storage
                   -open mineplex_stdlib_unix)))

(alias
 (name buildtest)
 (deps test.exe))

(alias
 (name runtest)
 (package mineplex-storage)
 (action (chdir %{workspace_root} (run %{exe:test.exe}))))

(alias
 (name runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:mineplex-tooling:lint.sh} %{deps})))
