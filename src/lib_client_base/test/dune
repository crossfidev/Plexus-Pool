(executable
 (name bip39_tests)
 (modules bip39_tests)
 (libraries mineplex-client-base alcotest)
 (flags (:standard -open mineplex_client_base)))

(alias
 (name    runtest)
 (package mineplex-client-base)
 (deps    (:exe bip39_tests.exe))
 (action  (run %{exe})))

