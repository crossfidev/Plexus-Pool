(executables
 (names test_parser)
 (libraries mineplex-micheline
            alcotest-lwt)
 (flags (:standard -open mineplex_micheline)))

(alias
  (name buildtest)
  (deps test_parser.exe))

(alias
  (name runtest_micheline_parser)
  (action (run %{exe:test_parser.exe})))

(alias
  (name runtest)
  (package mineplex-micheline)
  (deps (alias runtest_micheline_parser)))

(alias
 (name runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:mineplex-tooling:lint.sh} %{deps})))
